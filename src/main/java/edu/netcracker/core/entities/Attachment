package edu.netcracker.core.entities;

/**
 * Date 14.12.2015.
 * This class is for managing attachment
 * @author Miroshnichenko Yuriy
 */
public class Attachment extends AbstractEntity{
    /**
     * Attachment stored in byte[]
     */
    private byte[] file;
    /**
     * Attachment name
     */
    private String name;
    /**
     * Attachment size
     */
    private int size;

    public byte[] getFile(){
        return file.clone();
    }

    public String getName(){
        return name;
    }

    public int getSize(){
        return size;
    }

    public void setFile(byte[] file){
        this.file=file.clone();
    }

    public void setName(String name){
        this.name=name;
    }
    
    public void setSize(int size){
        this.size=size;
    }
}
